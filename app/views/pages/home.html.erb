<div class='center'>
	<div class="portfolio-wrapper">
		<% @posts.each do |post| %>
			<article class="portfolio">
				<div class="featured_image">	
					<%= link_to image_tag(post.featured_image_url(:featured)), post %>
				</div>
				<p><%= link_to post.title, post %></p>
			</article>
		<% end %>	
	</div>	
</div>