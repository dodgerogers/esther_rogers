<div class="center">
	<h2><%= @post.title %></h2>

	<p><%= @post.keywords %></p>

	<p><%= @post.body %></p><hr>

	<% @post.attachments.each do |image| %>
		<%= image_tag image.file %><hr>
	<% end %>

	<% if current_user %>
		<%= link_to 'Edit', edit_post_path(@post) %> |
		<%= link_to 'Dashboard', posts_path %>
	<% end %>
</div>	
