<fieldset class="field">
	<% if f.object.file_url(:mini) %>
		<%= image_tag f.object.file_url(:mini) %><br>
	<% else %>
		<%= f.file_field :file, class: "destroy-link" %>
	<% end %>
	<%= f.hidden_field :_destroy %>
	<%= link_to raw("Remove <i class='icon-remove-sign'></i>"), "#", class: "remove_fields btn btn-danger" %>
</fieldset>